{
  "name": "Kiwi",
  "short_name": "Kiwi",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Search, navigate and manage tabs in an effective way",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "scripts": ["background.js", "hotReload.js"],
    "persistent": true
  },
  "commands": {
    "toggleDialog1": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      },
      "description": "Open Kiwi"
    },
    "toggleDialog2": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Open Kiwi",
      "global": true
    }
  },
  "browser_action": {
    "default_icon": "assets/icon19.png",
    "default_title": "Search, navigate and manage tabs in an effective way"
  },
  "permissions": [
    "bookmarks",
    "history",
    "tabs",
    "activeTab",
    "<all_urls>",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": ["dialog.html"]
}
